<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.dev4u.hv.my_diagnostic.FragmentsIntro.Fragment_disclaimer"
    android:padding="5dp">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:text="TERMS AND CONDITIONS"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="24dp"
        android:textColor="@color/light_font"
        android:shadowColor="@color/text_shadow"
        android:layout_marginTop="25dp"
        />


    <ScrollView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:id="@+id/scrollView2">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView32"
            android:text=""
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            />


    </ScrollView>

    <TextView
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblViewAll"
        android:text="View All terms"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="6dp"
        android:textColor="#1a66bc"
        android:shadowColor="@color/text_shadow"
        android:textSize="15dp"
        android:layout_below="@+id/scrollView2"
        android:layout_centerHorizontal="true" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I Agree with this terms and conditions"
        android:id="@+id/checkTerms"
        android:textSize="20dp"
        android:textColor="@color/light_font"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:checked="false"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:buttonTint="#f7f7f7"
        android:layout_below="@+id/lblViewAll"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>