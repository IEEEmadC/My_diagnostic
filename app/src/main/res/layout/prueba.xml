<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_diseasess"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginRight="5dp">
    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="4"
        android:columnCount="3"
        android:orientation="horizontal" >

        <ImageView
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/disease_icon"
            android:id="@+id/img_disease" />
        <TextView
            android:textColor="@color/title_disease"
            android:id="@+id/lblDiseaseName"
            android:gravity="left"
            android:layout_weight="1"
            android:textSize="25dp"
            android:text="Carpal Tunnel Syndrome"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:typeface="serif" />

        <TextView
            android:textColor="@color/percentage_match"
            android:id="@+id/lblPercentage"
            android:gravity="right"
            android:textSize="25dp"
            android:text="25%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/lblSymptomsCount"
            android:gravity="left"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="Symptoms : 5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd" />
        <TextView
            android:layout_marginRight="5dp"
            android:id="@+id/lblSymptomsMatches"
            android:gravity="right"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="Match : 3"
            android:layout_width="126dp"
            android:layout_height="wrap_content" />
        <TextView android:text="Celda 3.2" />
        <TextView
            android:textColor="@color/colorAccent"
            android:id="@+id/lblCategory"
            android:text="Category"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:text="Celda 3.1"
            android:layout_columnSpan="2" />


        <TextView android:text="Celda 3.2" />
        <TextView
            android:layout_marginRight="5dp"
            android:id="@+id/lblDescription"
            android:gravity="left"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="Description: Como se puede observar, cuando nos saltamos alguna columna usando este atributo, las columnas posteriores se colocan a ,"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:typeface="monospace"
            android:textAlignment="textStart" />
    </GridLayout>
</android.support.v7.widget.CardView>